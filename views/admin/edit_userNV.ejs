<%- include("../layout/head") %>

<link rel="stylesheet" href="/css/body.css">
<style>
    .form-group {
        width: 50%;
    }
</style>

<body>
    <div class="aside" style="border: none;">
        <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
        <%- include("../layout/nav_admin") %>
        <br>
        <form class="form-signin" action="/updateNV" method="POST">
            <h2 style="color: green;">Cập nhật thông tin nhân viên</h2>
            <p><a href="/view_userNV">Trở lại</a></p>
            <div class="form-group">
                <label for="ID">ID:</label>
                <input type="text" name="ID" class="form-control" value="<%- userNV.ID %>">
            </div>
            <div class="form-group">
                <label for="name">Họ tên:</label>
                <input type="text" name="name" class="form-control" value="<%- userNV.name %>">
            </div>
            <div class="form-group">
                <label for="dateOfBirth">Ngày sinh:</label>
                <input type="date" name="dateOfBirth" class="form-control" value="<%- userNV.dateOfBirth %>">
            </div>
            <div class="form-group">
                <label for="age">Tuổi:</label>
                <input type="number" name="age" class="form-control" value="<%- userNV.age %>">
            </div>
            <div class="form-group">
                <label for="sdt">Số điện thoại:</label>
                <input type="text" name="sdt" class="form-control" value="<%- userNV.sdt %>">
            </div>
            <div class="form-group">
                <label for="address">Địa chỉ:</label>
                <input type="text" name="address" class="form-control" value="<%- userNV.address %>">
            </div>
            <br>
            <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit"
                style="width:15%;margin-left: 15%;">Cập nhật</button>
        </form>
    </div>
</body>