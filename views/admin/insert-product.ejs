<%- include("../layout/head") %>

<style>
  .form-group {
    width: 50%;
  }
</style>

<body>
  <div class="aside" style="border: none;">
    <%- include("../layout/aside_admin") %>
  </div>
  <div class="content">
    <%- include("../layout/nav_admin") %>

    <form class="form-signin" action="/insert" method="POST" enctype="multipart/form-data">
      <br>
      <h2 style="color: green;">Thêm Sản Phẩm</h2>
      <% if (message.length> 0) { %>
        <div class="form-control"><%= message %></div>
      <% } %>
      <p><a href="/admin/list-product">Trở lại</a></p>

      <div class="form-group">
        <label for="name">Tên sản phẩm:</label>
        <input type="text" name="name" class="form-control" placeholder="Nhập tên sản phẩm" required>
      </div>
      <div class="form-group">
        <label for="quantity">Số lượng:</label>
        <input type="number" name="quantity" class="form-control" placeholder="Nhập số lượng" required>

      </div>
      <div class="form-group">
        <label for="note">Mô tả:</label>
        <input type="text" name="note" class="form-control" placeholder="Nhập mô tả sản phẩm" required>
      </div>

      <div class="form-group">
        <label for="price">Giá bán:</label>
        <input type="number" name="price" class="form-control" placeholder="Nhập giá bán" required>

      </div>

      <div class="form-group">
        <div class="controls">
          <label for="cateID">Loại sản phẩm:</label>
          <select class="form-control" id="cateID" name="cateID">
            <% item.forEach(function(cate){ %>
              <option name="cateID" value="<%= cate._id%>"><%= cate.namecate%></option>
            <% }) %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="image">Hình ảnh:</label>
        <input type="file" name="image" required>
      </div>
    
      <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit"
        style="width:15%;margin-left: 15%;">Thêm</button>
    </form>
  </div>
</body>