<%- include("../layout/head") %>

<style>
    .form-group {
    width: 50%;
    }
</style>

<body>
    <div class="aside" style="border: none;">
    <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
    <%- include("../layout/nav_admin") %>

    <form class="form-signin" action="/insertorder" method="POST">
        <br>
        <h2 style="color: green;">Thêm đơn hàng</h2>        
        <p><a href="/list_order">Trở lại</a></p>

        <div class="form-group">
            <label for="name">Họ tên khách hàng:</label>
            <input type="text" name="name" class="form-control" placeholder="Nhập họ tên khách hàng" required>
        </div>
        <div class="form-group">
            <label for="sdt">Số điện thoại:</label>
            <input type="text" name="sdt" class="form-control" placeholder="Nhập số điện thoại khách hàng" required>
        </div>
        <div class="form-group">
            <label for="address">Địa chỉ:</label>
            <input type="text" name="address" class="form-control" placeholder="Nhập địa chỉ khách hàng" required>
        </div>     
        <div class="form-group">
            <label for="price">Tổng tiền:</label>
            <input type="number" name="price" class="form-control" placeholder="Nhập tổng tiền" required>
        </div>
    
        <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit"
        style="width:15%;margin-left: 15%;">Thêm</button>
    </form>
    </div>
</body>