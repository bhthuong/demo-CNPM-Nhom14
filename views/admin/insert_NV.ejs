<%- include("../layout/head") %>

<style>
    .form-group {
        width: 50%;
    }
</style>

<body>
    <div class="aside" style="border: none;">
        <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
        <%- include("../layout/nav_admin") %>

            <form class="form-signin" action="/insertNV" method="POST">
                <br>
                <h2 style="color: green;">Thêm nhân viên</h2>
                <p><a href="/view_userNV">Trở lại</a></p>
                <div class="form-group">
                    <label for="ID">ID:</label>
                    <input type="text" name="ID" class="form-control" placeholder="Nhập ID nhân viên" required>
                </div>
                <div class="form-group">
                    <label for="name">Họ tên:</label>
                    <input type="text" name="name" class="form-control" placeholder="Nhập họ tên nhân viên" required>
                </div>
                <div class="form-group">
                    <label for="dateOfBirth">Ngày sinh:</label>
                    <input type="date" name="dateOfBirth" class="form-control" placeholder="Nhập ngày sinh nhân viên" required>
                </div>
                <div class="form-group">
                    <label for="age">Tuổi:</label>
                    <input type="number" name="age" class="form-control" placeholder="Nhập tuổi nhân viên" required>
                </div>
                <div class="form-group">
                    <label for="sdt">Số điện thoại:</label>
                    <input type="text" name="sdt" class="form-control" placeholder="Nhập số điện thoại nhân viên" required>
                </div>
                <div class="form-group">
                    <label for="address">Địa chỉ:</label>
                    <input type="text" name="address" class="form-control" placeholder="Nhập địa chỉ nhân viên" required>
                </div>
                <br>
                <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit"
                    style="width:15%;margin-left: 15%;">Thêm</button>
            </form>
    </div>
</body>