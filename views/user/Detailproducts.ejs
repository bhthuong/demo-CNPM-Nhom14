<%- include("../layout/head") %>

<link rel="stylesheet" href="css/body.css">
<%- include("../layout/nav") %>

<body>
  <div class="container" style="margin-top: 2%;">
    <h3 class="m-0 font-weight-bold text-primary">Chi tiết sản phẩm</h3>
    <div class="row">
      <div class="col-sm-6">
        <img src="/upload/<%-danhsach.image %>" style="width: 70%; padding-top:2% ;">
      </div>
      <div class="col-sm-6">
        <input class="detail" type="hidden" value="<%- danhsach.id %>" name="idsp">
        <p style="font-size: 25px;"> <strong><%- danhsach.name %></strong></p>
        <p> <strong>Chi tiết :</strong><%- danhsach.note %></p>
        <p> <strong>Giá :</strong> <mark><%- danhsach.price %> VNĐ</mark></p>
        <a href="/add-to-cart/<%- danhsach._id %>" class="btn btn-outline-success">
          <i class="fa fa-cart-plus">Add toCart</i></a>
      </div>
    </div>
  </div>
  <br>
  <%- include("../layout/footer") %>
</body>